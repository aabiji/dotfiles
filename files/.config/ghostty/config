font-size = 11
cursor-style = block
theme = dark:iTerm2 Tango Dark, light:iTerm2 Tango Light
shell-integration-features = no-cursor

keybind = ctrl+space>h=goto_split:left
keybind = ctrl+space>j=goto_split:bottom
keybind = ctrl+space>k=goto_split:top
keybind = ctrl+space>l=goto_split:right

keybind = ctrl+space>shift+'=new_split:down
keybind = ctrl+space>shift+5=new_split:right

keybind = ctrl+space>c=new_tab
keybind = ctrl+space>p=previous_tab
keybind = ctrl+space>n=next_tab
keybind = ctrl+space>t=toggle_tab_overview

gtk-tabs-location=hidden
